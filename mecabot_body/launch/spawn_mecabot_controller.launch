<?xml version="1.0"?>
<launch>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="debug" value="false" />
        <arg name="gui" value="true" />
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="headless" value="false"/>
    </include>

    <arg name="config" default="urdf"/>
    <arg name="rvizconfig" default="$(find mecabot_body)/rviz/urdf.rviz" />

    <!-- Default spawn position -->
    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="6"/>

    <param name="robot_description" command="$(find xacro)/xacro '$(find mecabot_body)/urdf/mecabot.urdf.xacro'"/>
    <param name="/use_sim_time" value="true" />

    <!-- Convert joint state to TF for rviz --> 
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen" respawn="false">
        <remap from="/joint_states" to="/mecabot_joint_states"/>
    </node>

    <!-- Spawn the robot with gazebo_ros -->
    <node name="robot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
            args="-urdf -model mecabot -param robot_description -x $(arg x) -y $(arg y) -z $(arg z)"/>

    <!-- Load the controller -->
    <rosparam file="$(find mecabot_body)/config/wheel_controller.yaml" command="load"/>

    <!-- Load the controller manager node -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" output="screen" respawn="false" ns="/"
            args="joint_state_controller
                front_left_wheel_controller
                front_right_wheel_controller
                back_left_wheel_controller
                back_right_wheel_controller
                --timeout 60"/>



</launch>